{% extends 'base.html.twig' %}

{% block title %}Můj profil | Vstupenky{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-header">
            <h1>Můj profil</h1>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    {{ form_start(form) }}
                    <div class="card-header">
                        <h3 class="card-title">Osobní údaje</h3>
                    </div>
                    <div class="card-body">
                        {{ form_widget(form) }}
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-success">Uložit</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    {{ form_start(passwdForm) }}
                    <div class="card-header">
                        <h3 class="card-title">Změna hesla</h3>
                    </div>
                    <div class="card-body">
                        {{ form_widget(passwdForm) }}
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-default">Změnit heslo</button>
                    </div>
                    {{ form_end(passwdForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
