{% extends 'admin_base.html.twig' %}

{% block title %}{{ performance.name }} | Správa představení | Vstupenky{% endblock %}

{% block body %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>{{ performance.name }}</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ url('admin') }}">Admin</a></li>
                        <li class="breadcrumb-item"><a href="{{ url('redaktor_performance_list') }}">Správa představení</a></li>
                        <li class="breadcrumb-item active">{{ performance.name }}</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="{{ url('redaktor_performance_remove', {'id': performance.id}) }}"
                                class="btn btn-danger"
                               onclick="return confirm('Opravdu si přejete smazat představení {{ performance.name }}?')"
                            ><i class="fa fa-trash-alt"></i> Smazat představení</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card">
                        {{ form_start(form) }}
                        <div class="card-header">
                            <h3 class="card-title">Údaje o představení</h3>
                        </div>
                        <div class="card-body">
                            {{ form_widget(form) }}
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-success float-right">Upravit představení</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
